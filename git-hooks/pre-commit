#!/bin/sh
# 企业级原生 JS 代码提交校验钩子
# 适用场景：原生 JS 项目，无 Node.js/框架依赖

# 错误计数
ERROR_COUNT=0
# 获取ESLINT所在路径
PROJECT_ROOT=$(cd $(dirname $0)/../.. && pwd)
TOOLS_DIR="$PROJECT_ROOT/eslintexe"
# 获取暂存区的 JS 文件
JS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.js$')

if [ -z "$JS_FILES" ]; then
  echo "✅ 无 JS 文件需要校验，跳过代码检查"
  exit 0
fi

echo "🔍 开始执行JS 代码钩子校验..."

# --------------------------
# 校验本次提交中修改的内容
# --------------------------

for FILE in $JS_FILES; do
  # 提取修改内容时，先过滤乱码、控制符，只保留可打印文本+空格+换行
  MODIFIED_CONTENT=$(git diff --cached -U0 "$FILE" | grep -E '^\+' | sed 's/^\+//') 
  # 校验规则 1：禁止 console.log 和 debugger
  echo -e "开始校验${FILE}……"
  if echo "$MODIFIED_CONTENT" | grep -q "console.log"; then
    echo -e "    ❌ [错误] $FILE 以下行包含 console.log 调试代码，请删除！"
    echo "$MODIFIED_CONTENT" | grep -n "console.log" | sed 's/^/    行号/'
    ERROR_COUNT=$((ERROR_COUNT+1))
  fi
  if echo "$MODIFIED_CONTENT" |grep -q "debugger"; then
    echo -e "\n    ❌ [错误] $FILE 以下行包含 debugger 断点，请删除！"
    echo "$MODIFIED_CONTENT" |grep -n "debugger" | sed 's/^/    行号/'
    ERROR_COUNT=$((ERROR_COUNT+1))
  fi

  # 校验规则 2：禁止空函数
  if echo "$MODIFIED_CONTENT" | grep -qE "function\s+\w+\s*\(\s*\)\s*\{\s*\}" ; then
    echo -e "\n    ❌ [错误] $FILE 以下行包含空函数，请补充逻辑！"
    echo "$MODIFIED_CONTENT" | grep -nE "function\s+\w+\s*\(\s*\)\s*\{\s*\}" | sed 's/^/    行号/'
    ERROR_COUNT=$((ERROR_COUNT+1))
  fi

  echo -e "校验${FILE}结束……\n"
done


# --------------------------
# ESLINT进行代码风格校验
# --------------------------

# 获取到eslint.exe的路径
get_eslint_exe(){
  local exe_path="$TOOLS_DIR/eslint.exe"
  echo $exe_path
}

# 执行eslint的二进制文件
check_eslint(){
  local eslint_exe=$(get_eslint_exe)
  if [ ! -f "$eslint_exe" ]; then
    echo "❌ [错误] eslint.exe 未找到"
    echo "请执行init-eslint.sh初始化eslint环境"
    exit 1
  fi
}
# 执行eslint检查
run_eslint_check(){
  # 1.检查依赖
  check_eslint
  local eslint_exe=$(get_eslint_exe)

  # 2.执行eslint检查
  echo "🔍 开始执行ESLint检查..."
  "$eslint_exe" "$JS_FILES"

  if [ $? -ne 0 ]; then
    echo "❌ [错误] ESLint 检查失败，请检查代码风格！"
    ERROR_COUNT=$((ERROR_COUNT+1))
    exit 1
  else
    echo "✅ ESLint 检查通过！"
    exit 0
  fi
}
#========启动校验========
run_eslint_check


# --------------------------
# 最终判断
# --------------------------
if [ $ERROR_COUNT -ne 0 ]; then
  echo "\n ❌ 共发现 $ERROR_COUNT 处错误，请修复后重新提交！"
  exit 1
fi

echo "✅ JS 代码校验全部通过！"
exit 0